@model IEnumerable<VinylShop.Models.VinylPlate>

<div class="row pb-3">
	@foreach(var vinylPlate in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
					<div class="card">
						<img src="@vinylPlate.ImageUrl" class="card-img-top rounded"/>

						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h5 text-primary">@vinylPlate.Title</p>
							<p class="card-title text-info">Автор: <b>@vinylPlate.Author.Name</b></p>
							<p class="card-title text-info">Лейбл: <b>@vinylPlate.Label.Name</b></p>
						</div>
						<div class="pl-1">
							@if (@vinylPlate.ListPrice == @vinylPlate.Price10){
									<p>Ціна: <b>₴@vinylPlate.ListPrice.ToString("0.00")</b></p>
								}
								else
								{
									<p>Ціна: <strike><b>₴@vinylPlate.ListPrice.ToString("0.00")</b></strike></p>
								}

						</div>
						<div class="pl-1">
							<p>Найменша ціна: <b>₴@vinylPlate.Price50.ToString("0.00")</b></p>
						</div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-vinylPlateId="@vinylPlate.Id">
							Детальніше
						</a>
					</div>
				</div> 
			</div>
		</div>
	}
</div>
